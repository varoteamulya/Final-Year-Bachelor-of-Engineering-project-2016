<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/main_title_bar_color"
    android:padding="10dip" >

    <Button
        android:id="@+id/main_title_left"
        android:layout_width="35dip"
        android:layout_height="35dip"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:background="@drawable/button_direction_left"
        android:textColor="@drawable/button_main_text"
        android:textSize="20sp" />

    <Button
        android:id="@+id/main_title_left_logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:background="@drawable/button_main"
        android:text="@string/logout"
        android:textColor="@drawable/button_main_text"
        android:textSize="20sp"
        android:visibility="gone" />

    <Button
        android:id="@+id/main_title_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/button_main"
        android:textColor="@drawable/button_main_text"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/main_title_text"
        android:layout_width="wrap_content"
        android:layout_height="35dip"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:paddingLeft="10dip"
        android:paddingRight="10dip"
        android:textColor="@color/main_title_text_color"
        android:textSize="20sp" />
    <!-- <com.lifesense.ui.view.MyGallery -->
    <!-- android:id="@+id/main_title_text_list" -->
    <!-- android:layout_width="170dip" -->
    <!-- android:layout_height="wrap_content" -->
    <!-- android:layout_centerHorizontal="true" -->
    <!-- android:layout_centerVertical="true" -->
    <!-- android:gravity="center" -->
    <!-- android:spacing="0dip" /> -->

    <TextView
        android:id="@+id/main_title_last_text"
        android:layout_width="wrap_content"
        android:layout_height="35dip"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/main_title_text"
        android:gravity="center"
        android:paddingLeft="10dip"
        android:paddingRight="10dip"
        android:textColor="@color/main_title_text_color"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/main_title_start_text"
        android:layout_width="wrap_content"
        android:layout_height="35dip"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/main_title_text"
        android:gravity="center"
        android:paddingLeft="10dip"
        android:paddingRight="10dip"
        android:textColor="@color/main_title_text_color"
        android:textSize="12sp" />

</RelativeLayout>