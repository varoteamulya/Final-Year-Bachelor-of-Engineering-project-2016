<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="?android:attr/listPreferredItemHeight"
    android:padding="6dip" >

    <TextView
        android:id="@+id/s_AddressTextView"
        android:layout_width="fill_parent"
        android:layout_height="26dip"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:ellipsize="marquee"
        android:singleLine="true"
        android:text="Device Address"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/s_NameTextView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/s_AddressTextView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignWithParentIfMissing="true"
        android:layout_toLeftOf="@+id/s_PairTextView"
        android:gravity="center_vertical"
        android:text="Device Name"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/s_PairTextView"
        style="@style/RelativeLayoutStyle"
        android:layout_width="86dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/s_AddressTextView"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/s_NameTextView"
        android:layout_alignWithParentIfMissing="true"
        android:layout_marginRight="5dp"
        android:gravity="center"
        android:text="Pairing status"
        android:textSize="12sp" />

</RelativeLayout>