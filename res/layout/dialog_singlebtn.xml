<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/two_dialog"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:background="@drawable/dialog_bg"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:gravity="center"
        android:textColor="@color/dialog_text_color"
        android:textSize="23.0dip" />

    <LinearLayout
        android:id="@+id/two_dialog_context"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dip"
        android:gravity="center"
        android:minHeight="50dip"
        android:minWidth="300dip" >

        <TextView
            android:id="@+id/two_dialog_text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/dialog_text_color"
            android:textSize="20.0dip" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <Button
            style="?android:attr/buttonBarButtonStyle"
            android:id="@+id/two_dialog_left"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:background="@drawable/button_dialog_bottm_left_bg"
            android:padding="10dip"
            android:textColor="@color/dialog_button_text_color"
            android:textSize="20.0dip" />

        <Button
            style="?android:attr/buttonBarButtonStyle"
            android:id="@+id/two_dialog_right"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:background="@drawable/button_dialog_bottm_right_bg"
            android:padding="10dip"
            android:textColor="@color/dialog_button_text_color"
            android:textSize="20.0dip" />
    </LinearLayout>

</LinearLayout>